#!/bin/sh

lsleds() {
  echo "${0##*/}: list of system LEDs"
  ls /sys/class/leds/
}

help() {
cat << EOF
${0##*/} usage:
  [set|s|1|on] <LED>
  [clear|c|0|off] <LED>

EOF
exit 1
}

case "$1" in
  l | ls | list ) lsleds ;;
  "" | help ) help ;;
  set | s | 1 | on )
    shift
    exec led.sh set "$@"
    ;;
  clear | 0 | off | c )
    shift
    exec led.sh clear "$@"
    ;;
esac

