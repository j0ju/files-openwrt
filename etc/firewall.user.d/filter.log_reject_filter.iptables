# for matched packets to be logged just fall through
# otherwise jump directly to "reject" -j reject
*filter
:log_reject_filter - [0:0]

#- ignore IGMP
-A log_reject_filter -p 2 -d 224.0.0.1 -j reject

#- ignore samba boradcasts
-A log_reject_filter -p udp --dport 137:138 -j reject

#- ignore chatty canon printer drivers
-A log_reject_filter -p udp --dport 8612 -j reject

#- ignore broadcasts
-A log_reject_filter -p udp -m addrtype --dst-type BROADCAST -j reject

COMMIT
